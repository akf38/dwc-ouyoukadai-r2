- room.messages.each do |m|
  - if m.user_id == user.id
    .message-from-u
      = m.message
  - elsif m.user_id == current_user.id
    .message-from-cu
      =m.message
= form_with model: [room, message], remote: true do |f|
  = f.text_field :message, autofocus: true
  = hidden_field_tag :user_id, user.id
  = f.submit '送信', class: "comment-submit-btn"