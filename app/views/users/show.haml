.container.px-5.px-sm-0
  .row
    .col-md-3
      %h2 User info
      = render 'info', user: @user
      - unless @user == current_user
        - if @haveRoom
          = link_to "#{@user.name}とのチャットルームはこちら", room_path(@roomid)
        - else
          = link_to "#{@user.name}とのチャットルームはこちら", rooms_path(user_id: @user.id), method: :post
      %h2.mt-3 New book
      = render 'books/form', book: @book
    .col-md-8.offset-md-1
      %h2 Books
      =render 'books/index', books: @books
      